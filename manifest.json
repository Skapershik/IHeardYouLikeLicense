{
    "manifest_version": 2,
    "name": "I Heard You Like License",
    "description": "Возвращает shikimori к жизни",
    "version": "1.2",
    "icons": {"64": "logo.png"},
    "permissions": [
        "proxy",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "cookies",
        "<all_urls>",
        "*://play.shikimori.org/*",
        "*://shikimori.org/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [{
        "matches": [
            "*://play.shikimori.org/*",
            "*://shikimori.org/*"
        ],
        "js": [
            "jquery.js",
            "justice.js"
        ],
        "run_at": "document_start"
    }],
    "background": {
        "scripts": [
            "jquery.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "I Heard You Like License"
    }
}
